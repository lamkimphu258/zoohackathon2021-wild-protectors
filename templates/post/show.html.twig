{% extends 'base.html.twig' %}

{% block title %}Wild{% endblock %}

{% block body %}
    <h1 class="text-center">{{ approvedPost.title }}</h1>
    {{ approvedPost.content | raw }}
    <h2>References</h2>
    <ul>
        {% for ref in approvedPost.reference %}
            <li>
                <a href="//{{ ref }}">
                    {{ ref}}
                </a>
            </li>
        {% endfor %}
    </ul>
    <h2>
        Nguồn từ:
        <a href="{{ approvedPost.link.link }}">
            {{ approvedPost.link.link }}
        </a>
    </h2>
{% endblock %}
